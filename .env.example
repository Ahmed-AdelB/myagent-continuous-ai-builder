# Environment Configuration for Continuous AI Builder

# API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
POSTGRES_PASSWORD=myagent_secure_pass
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=myagent_db
POSTGRES_USER=myagent

# Redis Configuration
REDIS_PASSWORD=redis_secure_pass
REDIS_HOST=localhost
REDIS_PORT=6379

# ChromaDB Configuration
CHROMA_TOKEN=chroma_secure_token
CHROMA_HOST=localhost
CHROMA_PORT=8001

# Application Settings
ENV=development
DEBUG=false
LOG_LEVEL=INFO

# Development Settings
MAX_ITERATIONS=1000
CHECKPOINT_INTERVAL=10
AUTO_CHECKPOINT=true

# Quality Targets
TARGET_TEST_COVERAGE=95.0
TARGET_QUALITY_SCORE=85.0
TARGET_PERFORMANCE_SCORE=90.0
MAX_CRITICAL_BUGS=0
MAX_MINOR_BUGS=5

# Agent Configuration
AGENT_LEARNING_ENABLED=true
AGENT_ADAPTATION_THRESHOLD=0.8
AGENT_MAX_RETRIES=3

# Frontend Settings
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Monitoring (Optional)
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=15d

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Multi-Agent Configuration
MULTI_AGENT_ENABLED=true
MULTI_AGENT_MAX_CONCURRENT=5

# GPT-5 Configuration (when available)
GPT5_API_ENDPOINT=https://api.openai.com/v1/chat/completions
GPT5_MODEL=gpt-5-chat-latest
GPT5_MAX_TOKENS=4000
GPT5_TEMPERATURE=0.3